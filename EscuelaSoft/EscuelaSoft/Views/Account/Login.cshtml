
@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Reloj ZamSoft | Login</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <link href="~/Fonts/font-awesome/css/font-awesome.css" rel="stylesheet">
   
    <link href="~/Content/animate.css" rel="stylesheet">
    <link href="~/Content/style.css" rel="stylesheet">
    
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>

</head>

<body class="gray-bg">

    <div class="middle-box text-center loginscreen  animated fadeInDown">

        <div>
            <form data-bind="submit: login" class="form-horizontal" role="form" id="Loginn">
                @Html.AntiForgeryToken()
                <h4>Bienvenido</h4>
                <small>Utilizar una cuenta de correo electrónico para iniciar sesión.</small>
                <hr />
                @Html.ValidationSummary(true)
                <div class="form-group">
                    @Html.Label("Correo", new { @class = "col-md-3 control-label" })
                    <div class="col-md-9">
                       <input type="email" class="form-control" placeholder="Correo Electrónico" data_bind="value: loginEmail" />                        
                        @Html.ValidationMessage("Correo Electrónico")
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("Password", new { @class = "col-md-3 control-label" })
                    <div class="col-md-9">
                        <input type="password" class="form-control" placeholder="Password" data_bind="value:loginPassword" />                       
                        @Html.ValidationMessage("Password")
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-8">
                        <button class="ladda-button btn btn-primary" data-style="expand-left">Log In</button>
                    </div>
                </div>
                <p>
                    @Html.ActionLink("Registrarme", "Register") Aún no tengo una cuenta.
                </p>
            </form>
        </div>

    </div>    
</body>

</html>